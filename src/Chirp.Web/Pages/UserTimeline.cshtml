@page "/{author}"
@using Chirp.Core.Models
@inject SignInManager<Author> SignInManager
@model Chirp.Web.Pages.UserTimelineModel
@{
    ViewData["Title"] = $"@{Model.Author}'s Timeline";
}

<div class="timeline-header">
    <h2>@Model.Author's Timeline</h2>
</div>

@if (User.Identity?.IsAuthenticated == true && Model.IsOwnTimeline)
{
    <partial name="_CheepInput" model="Model" />
}

<div>
    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li class="cheep">
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorDTO.Name" class="author-name">@cheep.AuthorDTO.Name</a>
                        </strong>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (cheep.IsFollowing)
                            {
                                <form method="post" asp-page-handler="Unfollow" asp-route-author="@cheep.AuthorDTO.Name" class="follow-form">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="follow-button small-button">Unfollow</button>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="Follow" asp-route-author="@cheep.AuthorDTO.Name" class="follow-form">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="follow-button small-button">Follow</button>
                                </form>
                            }
                        }

                        @cheep.Text
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
        <div class="pagination">
            @if (Model.CurrentPage > 0)
            {
                <a href="?page=@(Model.CurrentPage - 1)">Previous</a>
            }

            @if (Model.Cheeps.Count == 32) // Assuming 32 is the page size
            {
                <a href="?page=@(Model.CurrentPage + 1)">Next</a>
            }
        </div>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>