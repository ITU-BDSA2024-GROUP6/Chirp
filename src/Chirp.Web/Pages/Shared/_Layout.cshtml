<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Chirp.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_Layout.cshtml.css" />
</head>
<body>
<div class=page>
    <h1><img src="/images/icon1.png" alt="Icon1"/>Chirp!</h1>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Public Timeline</a>
                        </li>
                        <li class="nav-item">
                            <span>|</span>
                        </li>
                        <partial name="_LoginPartial" />

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class=body>
            @RenderBody()
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
