@using Microsoft.AspNetCore.Identity
@using Chirp.Core.Models
@inject SignInManager<Author> SignInManager
@inject UserManager<Author> UserManager

<head>
    <link rel="stylesheet" href="~/_LoginPartial.cshtml.css" />
</head>
@if (SignInManager.IsSignedIn(User))
{
    <div style="width: 100%; position: relative;">
        <span style="width: auto;">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Public">Public Timeline</a>
                </li>

                <li class="nav-item">
                    <span>|</span>
                </li>

                <li class="nav-item">
                    <a class="nav-item text-dark" href="/@User.Identity?.Name">
                        Your Timeline
                    </a>
                </li>

                <li class="nav-item">
                    <span>|</span>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                        About me
                    </a>
                </li>
            </ul>
        </span>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" style="width: auto;"
            asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark" style="float: right;">Logout</button>
        </form>
    </div>
}
else
{
    <div style="width: 100%; position: relative;">
        <span style="width: auto;">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Public">Public Timeline</a>
                </li>
            </ul>
        </span>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Login" style="width: auto;"
            asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark" style="float: right;">Login</button>
        </form>
    </div>
